{
  "name": "ztr-launcher",
  "version": "1.0.0",
  "description": "Launcher oficial da ZTR Company",
  "main": "main.js",
  "author": "ZTR Company",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
